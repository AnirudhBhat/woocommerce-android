<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_order_creation"
    app:startDestination="@id/newOrderFragment">

    <fragment
        android:id="@+id/newOrderFragment"
        android:name="com.woocommerce.android.ui.orders.creation.neworder.NewOrderFragment"
        android:label="NewOrderFragment"
        tools:layout="@layout/fragment_order_creation_new_order">
        <action
            android:id="@+id/action_newOrderFragment_to_addCustomerFragment"
            app:destination="@id/addCustomerFragment"
            app:enterAnim="@anim/activity_slide_in_from_right"
            app:popExitAnim="@anim/activity_slide_out_to_right" />
    </fragment>

    <fragment
        android:id="@+id/addCustomerFragment"
        android:name="com.woocommerce.android.ui.orders.creation.addcustomer.AddCustomerFragment"
        android:label="CustomerCreationFragment"
        tools:layout="@layout/fragment_order_creation_add_customer" />
</navigation>
